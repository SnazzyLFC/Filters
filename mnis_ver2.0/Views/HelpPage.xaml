<Page
    x:Class="mnis_ver2._0.Views.HelpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:mnis_ver2._0.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="menuStack" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="0" Orientation="Horizontal" >
            <Button Margin="0, 0, 25, 0" Content="Wstecz" Width="100" Click="Button_Click"></Button>
            <Button Margin="25, 0, 0, 0" Content="Dalej" Width="100" Click="Button_Click_1"></Button>
        </StackPanel>
        <WebView x:Name="webViewControl" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>



        <Button x:Name="backButton" Grid.Column="0" HorizontalAlignment="Center" Content="Wróć do programu" Click="Button_Click_2" />



        
    </Grid>
</Page>
